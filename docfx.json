{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Unosquare.FFME/**/*.cs"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/Commands/**",
            "**/Core/**",
            "**/Decoding/**",
            "**/FFmpeg/**",
            "**/Rendering/**",
            "**/Resources/**"
          ]
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.yml"
        ],
        "cwd": "obj/api",
        "dest": "api"
      },
      {
        "files": [
          "*.md",
          "toc.yml"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "FFME: WPF MediaElement replacement based on FFmpeg",
      "_enableSearch": true
    },
    "dest": "_site"
  }
}